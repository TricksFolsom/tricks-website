<%= form_for(@website_pdf) do |f| %>
  <%= render partial: 'helper_fields/errors', locals: {object: @website_pdf} %>
    
  <div class="row align-center">
    <div class="columns large-4 small-10">
      <%= render partial: 'helper_fields/select', locals: {form: f, field: :file_name, options: WebsitePdf::FILENAMES, label: "PDF Being Updated", prompt: "Select a File Name"} %>
    </div>
  </div>
  <div class="row align-center">
    <div class="columns large-4 small-10">
      <%= render partial: 'helper_fields/file_uploader', locals: {form: f, field: :file_new, label: "Choose PDF", uses_active_storage: true} %>
    </div>
  </div>
  <div class="row align-center">
    <div class="columns small-6 large-2" style="margin-top: 50px;">
      <%= f.submit "Submit", class: "button expanded" %>
    </div>
  </div>


<% end %>

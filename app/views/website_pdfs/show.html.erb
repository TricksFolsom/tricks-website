<% if !@website_pdf.nil? %>
    <% content_for :title do %>
        <%= +@website_pdf.file_name.tr("_"," ")+ " PDF" %>
    <% end %>
    
    <div class="row">
        <div class="columns small-12">
            <h1 style="margin-bottom: 0"><%= @website_pdf.file_name.tr("_"," ") %></h1>
            <% if @website_pdf.file_new.attached? %>
                <iframe src="<%= @website_pdf.file_new.url %>" style="width:100%; height: 1200px; border:solid #444 2px;" frameborder="0"></iframe>
            <% else %>
                <iframe src="<%= @website_pdf.file.url %>" style="width:100%; height: 1200px; border:solid #444 2px;" frameborder="0"></iframe>
            <% end %>
        </div>
    </div>
<% else %>
    <h2>There is no PDF with name: "<%= request.original_url.split("/").last %>"</h2>
<% end %>
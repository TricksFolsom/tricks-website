<%= form_for(@bubble_content) do |f| %>
  <%= render partial: 'helper_fields/errors', locals: {object: @bubble_content} %>

  <div class="row align-center">
    <div class="columns large-9 small-11">
      <div class="row">
        <div class="columns large-6 ">
          <%= render partial: 'helper_fields/text', locals: {form: f, field: :text} %>
        </div>
        <div class="columns large-6 ">
          <%= render partial: 'helper_fields/number', locals: {form: f, field: :sort_order, label: "Position ID"} %>
        </div>
      </div>
      <div class="row">
        <div class="columns large-6 ">
          <%= render partial: 'helper_fields/color_picker', locals: {form: f, field: :color, label: "Background Color"} %>
        </div>
        <div class="columns large-6 ">
          <%= render partial: 'helper_fields/color_picker', locals: {form: f, field: :text_color, label: "Text Color"} %>
        </div>
      </div>
      <div class="row">
        <div class="columns small-12">
          <%= render partial: 'helper_fields/text', locals: {form: f, field: :link} %>
        </div>
      </div>
    </div>
    
    <div class="columns large-3 small-11">
      <%= render partial: 'helper_fields/image_uploader', locals: {form: f, field: :image, image: @bubble_content.image} %>
    </div>
  </div>
  
  <div class="row align-center" style="margin-bottom: 100px; margin-top: 50px;">
    <div class="columns small-8">
      <%= f.submit class: "button expanded" %>
    </div>
  </div>


<% end %>

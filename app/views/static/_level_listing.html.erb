<% outline_width = "1" %>
<% outline = "-"+outline_width+"px 0 #222, 0 "+outline_width+"px #222, "+outline_width+"px 0 #222, 0 -"+outline_width+"px #222" %>
<style>
  
  .panel-<%= level.id %>-label.accordion-title, .panel-<%= level.id %>-label.accordion-title:focus, .panel-<%= level.id %>-label.accordion-title:hover, .is-active .panel-<%= level.id %>-label.accordion-title{
  	background-color: <%= color %>;
  	margin: 25px 0 0 0;
  	border-radius: 20px !important;
  	box-sizing: border-box;
  	border: solid 2px <%= color %>;
  	text-shadow: <%= outline %>, 0 0 5px #555;
	color: #fff;
  }
  .panel-<%= level.id %>-label.accordion-title:hover, .is-active .panel-<%= level.id %>-label.accordion-title{
  	border: solid 2px #333;
  	text-shadow: <%= outline %>, 0 0 15px #111;
  }
</style>


<li class="accordion-item" data-accordion-item>
	<a href="#" data-id="<%= level.id %>" class="accordion-title panel-<%= level.id %>-label level-panel" style="display: block;">
		<% level_title = (level.age.empty?) ? level.levelname : level.levelname + " - Age: " + level.age %>
		<h3 data-id="<%= level.id %>" style="padding:0; margin:0; text-align:center;"><%= level_title %></h3>
	</a>
	<div class="accordion-content" data-tab-content>
		<% if !level.video_url.nil? && !level.video_url.empty? %>
			<div class="row align-center">
				<div class="columns large-8 ">
					<div class="flex-video">
						<iframe src="<%= level.video_url %>" frameborder="0" allowfullscreen></iframe>
					</div>
				</div>
			</div>
		<% end %>
		<div class="row">
			<%= level.short_description %>
		</div>

		<div class="row align-justified" style="margin: 30px 0px 10px 0px;">
			<% locations = {"Folsom" => "FOL", "Sacramento" => "SAC"} %> 
			<% locations.each do |loc| %>
				<div class="columns 3-small">
					<%= link_to(loc[0], 'javascript:void(0);', class: "button expanded location-button", id: loc[1], style: "margin-bottom: 0;") %>
				</div>
			<% end %>
		</div>
		<% if !level.show_registration %>
			<h5 style="text-align:center; margin-bottom: 20px;">Only Beginning classes available for online registration</h5>
		<% end %>
		<div class="row level-classes" id="<%= level.id %>">
			<div class="columns small-12" style="text-align:center;">
				<%= image_tag("loading-spinner.gif") %>
			</div>    
		</div>
	</div>
</li>
<div id="form">
  <%= form_for(@kid_quote) do |f| %>
    <%= render partial: 'helper_fields/errors', locals: {object: @kid_quote} %>
    <div class="row align-center">
      <div class="columns small-11 large-8">
        <%= render partial: 'helper_fields/text_area', locals: {form: f, field: :quote} %>
        <%= render partial: 'helper_fields/text', locals: {form: f, field: :name, placeholder: "If unknown, make one up"} %>
        <%= render partial: 'helper_fields/number', locals: {form: f, field: :age, min: 0} %>
      </div>
      
      <div class="columns small-11 large-8">
        <%= f.submit "Submit", class: "button expanded" %>
      </div>
    </div>


  <% end %>
</div>
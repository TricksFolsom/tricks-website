<h1>Listing absents</h1>

<table>
  <tr>
    <th>Student Name</th>
    <th>Location</th>
    <th>Date</th>
    <th>Day</th>
    <th>Time</th>
    <th>Level</th>
    <th>Reason</th>
  </tr>

<% @absents.each do |absent| %>
  <tr>
    <td><%= absent.first_name + " " + absent.last_name %></td>
    <td><%= Absent::HUMAN_LOCATIONS[absent.location] %></td>
    <td><%= absent.date.strftime("%b %e, %Y") %></td>
    <td><%= absent.date.strftime("%A") %></td>
    <td><%= absent.time.strftime("%l:%M %p") %></td>
    <td><%= absent.level.levelname %></td>
    <td><%= absent.reason %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Absent', new_absent_path %>
